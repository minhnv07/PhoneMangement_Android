<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/layoutSearchBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Nhãn cho Spinner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn hãng"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>

        <Spinner
            android:id="@+id/spnManufacturer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="8dp"/>

        <!-- Nhãn cho RadioGroup -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn kích cỡ"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="2dp"/>

        <RadioGroup
            android:id="@+id/rgScreenSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbGreater6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="> 6 inch"/>

            <RadioButton
                android:id="@+id/rbLessOrEqual6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="≤ 6 inch"
                android:layout_marginStart="16dp"/>
        </RadioGroup>

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tìm kiếm"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSearch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layoutSearchBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
